<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Title</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for publication in publications %}
        <tr>
            <td>
                <a href="{{ path('admin_publication_show', {'id': publication.id}) }}">
                    {{ publication.title }}
                </a>
            </td>
            <td class="text-right">
                <a class="btn btn-xs btn-warning"
                   href="{{ path('admin_publication_edit', {'id': publication.id}) }}">
                    Modifier</a>
                <a class="btn btn-xs btn-danger"
                   href="{{ path('admin_publication_delete', {'id': publication.id}) }}">
                    Supprimer
                </a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">Aucune publication enregistr√©</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
